@using Lfm.Web.Mvc.App.UIRenderers
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>My Cabinet</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            
            <ul class="nav nav-pills flex-column">
                @foreach (var item in UserCabinetUiRenderer.GetCabinetNavigationItems(Context))
                {
                    <li class="nav-item">
                        <a class="nav-link @CommonUiRenderer.ActiveLink(Context.Request.Path, item.Link)" href="@item.Link">@item.Name</a>
                    </li>
                }
            </ul>
        </div>
        
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>