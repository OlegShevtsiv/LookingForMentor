@using Lfm.Domain.Common.Extensions
<AuthorizeView>
    <Authorized>
        @if (!context.User.IsManager())
        {
            <LoginRedirect/>
        }
        
        Hello, @context.User.GetName()!
        
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link">Log out</button>
        </form>
        
    </Authorized>
    <NotAuthorized>
        <LoginRedirect/>
    </NotAuthorized>
</AuthorizeView>